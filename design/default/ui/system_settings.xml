<window text="System Settings" anim_hint="htranslate">
  <list_view x="0"  y="30" w="100%" h="-80" item_height="40">
    <scroll_view name="view" x="0"  y="0" w="100%" h="100%">
      <list_item name="time" style="odd_clickable" children_layout="default(rows=1,cols=0)" v-on:click="{navigate, args=time_settings}">
        <label w="-30" text="Time Settings" />
        <image w="30" image="more" />
      </list_item>
      <list_item name="about" style="even_clickable" children_layout="default(rows=1,cols=0)" v-on:click="{navigate, args=about}">
        <label w="-30" text="About..." />
        <image w="30" image="more" />
      </list_item>
      <list_item name="back" style="even_clickable" children_layout="default(rows=1,cols=0)" 
        v-on:click="{nothing, CloseWindow=true}">
        <label w="-30" text="Back"/>
      </list_item>
    </scroll_view>
    <scroll_bar_m name="bar" x="right" y="0" w="6" h="100%" value="0"/>
  </list_view>
</window>
